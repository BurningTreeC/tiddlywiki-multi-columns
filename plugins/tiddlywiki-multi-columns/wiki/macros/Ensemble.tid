\define ensemble(title)
<$set name="storyTiddler" value={{{ [[$:/Story/]addsuffix<__title__>] }}}>
<$button class="tc-btn-invisible" actions=<<btc-load-story-actions>>><$text text=<<__title__>>/></$button>
</$set>
\end