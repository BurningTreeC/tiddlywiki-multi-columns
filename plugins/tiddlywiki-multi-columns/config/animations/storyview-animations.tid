title: $:/config/StoryViewAnimations

@keyframes slide-in {
	from {
		transform: translateX(-100%);
	} to {
		transform: translateX(0%);
	}
}

@keyframes slide-out {
	from {
		transform: translateX(0%);
	} to {
		transform: translateX(-100%);
	}
}

.tc-inserting {
	animation: slide-in {{$:/config/AnimationDuration}}ms;
	animation-timing-function: linear;
}

.tc-removing {
	animation: slide-out {{$:/config/AnimationDuration}}ms;
	animation-timing-function: linear;
}